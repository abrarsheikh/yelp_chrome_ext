{
  "manifest_version": 2,
  "name": "Yelp",
  "short_name": "Yelp",
  "version": "1.0.0",
  "description": "Yelp App for Google Chrome",
  "icons": {
    "32": "icons/yelp_icon.png",
    "16": "icons/yelp.png"
  },
  "background": {
    "persistance": true,
    "scripts": [
      "background/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "omnibox": { "keyword" : "syelp" },
  "permissions": [
    "contextMenus",
    "background",
    "geolocation",
    "https://www.yelp.com.au/"
  ]
}
